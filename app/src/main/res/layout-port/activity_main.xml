<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" tools:ignore="MergeRootFrame"
    android:background="@android:color/holo_blue_dark"
    android:screenOrientation="portrait"
    android:orientation="vertical">

    <!--Linear Layout for first Monitor-->
    <LinearLayout
        android:id="@+id/monitor_container_0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".25">

    </LinearLayout>
    <!--Linear Layout for second Monitor-->
    <LinearLayout
        android:id="@+id/monitor_container_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".25">

    </LinearLayout>
    <!--Linear Layout for third Monitor-->
    <LinearLayout
        android:id="@+id/monitor_container_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".25">

    </LinearLayout>
    <!--Linear Layout for fourth Monitor-->
    <LinearLayout
        android:id="@+id/monitor_container_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".25">

    </LinearLayout>

</LinearLayout>
