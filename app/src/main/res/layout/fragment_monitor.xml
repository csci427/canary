<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_item"
    android:weightSum="1">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TITLE"
        android:id="@+id/monitorTitleTextView"
        android:textSize="20dp"
        android:clickable="true"
        android:longClickable="true"
        android:layout_above="@+id/monitorUnitsTextView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight=".20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:text="VAL"
        android:id="@+id/monitorValueTextView"
        android:layout_gravity="center"
        android:clickable="true"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:longClickable="true"
        android:layout_above="@+id/monitorUnitsTextView"
        android:layout_alignRight="@+id/monitorUnitsTextView"
        android:layout_alignEnd="@+id/monitorUnitsTextView"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowWeight=".40"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UNITS"
        android:id="@+id/monitorUnitsTextView"
        android:textSize="20dp"
        android:longClickable="true"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_rowWeight=".20"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:rowCount="1"
        android:columnCount="3"
        android:paddingBottom="0dp"
        android:paddingLeft="@dimen/abc_action_button_min_width_material"
        android:paddingRight="@dimen/abc_action_button_min_width_material"
        android:paddingTop="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/lowThreshold"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/highThreshold"
            android:layout_row="0"
            android:layout_column="2" />
    </GridLayout>


</LinearLayout>

