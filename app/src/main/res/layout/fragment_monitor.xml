<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" tools:context="edu.umt.csci427.canary.MonitorFragment"
    android:clickable="false">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:rowCount="6"
        android:columnCount="1">

        <Space
            android:layout_width="20px"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TITLE"
            android:id="@+id/monitorTitleTextView"
            android:textSize="30dp"
            android:clickable="true"
            android:longClickable="true"
            android:layout_above="@+id/monitorUnitsTextView"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:text="VAL"
            android:id="@+id/monitorValueTextView"
            android:layout_gravity="center"
            android:clickable="true"
            android:textSize="50dp"
            android:textAlignment="center"
            android:gravity="center"
            android:longClickable="true"
            android:layout_above="@+id/monitorUnitsTextView"
            android:layout_alignRight="@+id/monitorUnitsTextView"
            android:layout_alignEnd="@+id/monitorUnitsTextView"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="UNITS"
            android:id="@+id/monitorUnitsTextView"
            android:textSize="35dp"
            android:longClickable="true"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_row="3"
            android:layout_column="0" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_row="5"
            android:layout_column="0" />

    </GridLayout>

</RelativeLayout>
